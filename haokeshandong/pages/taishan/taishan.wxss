.banner-swiper {
  width: 100%;
  height: 400rpx;
  overflow: hidden;
}
 
swiper {
  display: block;
  height: 400rpx;
  position: relative;
}
 
.slide-image {
  width: 97%;
  display: block;
  margin: 0 auto;
  height: 360rpx;
  margin-top:20rpx;
  border-radius: 10rpx;
}
.active{
  margin-top:0rpx;
  height: 400rpx;
  border-radius:10rpx; 
}
.box{
  margin: 20px;
  padding: 20px;
  border: 1px;
  background-color: skyblue;
}
.text{
  text-indent: 30px;
}